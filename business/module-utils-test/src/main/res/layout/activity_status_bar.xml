<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffFF00"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_status_bar_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐藏状态栏" />

        <Button
            android:id="@+id/btn_status_bar_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示状态栏" />

        <Button
            android:id="@+id/btn_status_bar_imm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="沉浸式状态栏1" />

        <Button
            android:id="@+id/btn_status_bar_imm_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="沉浸式状态栏2" />

        <Button
            android:id="@+id/btn_status_bar_black_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏黑色文字" />

        <Button
            android:id="@+id/btn_status_bar_white_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏白色文字" />

        <Button
            android:id="@+id/btn_status_bar_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏颜色" />

        <Button
            android:id="@+id/btn_status_bar_fit_false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fitSystemWindows = false"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_status_bar_fit_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fitSystemWindows = true"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_status_bar_is_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态栏是否显示"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>