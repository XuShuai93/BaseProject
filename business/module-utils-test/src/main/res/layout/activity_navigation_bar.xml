<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffFF00"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_navi_bar_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐藏导航栏" />

        <Button
            android:id="@+id/btn_navi_bar_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示导航栏" />

        <Button
            android:id="@+id/btn_navi_bar_imm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="界面侵入导航栏" />

        <Button
            android:id="@+id/btn_navi_bar_white_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏白色文字" />

        <Button
            android:id="@+id/btn_navi_ba_black_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏黑色文字" />


        <Button
            android:id="@+id/btn_navi_bar_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏颜色" />


        <Button
            android:id="@+id/btn_navi_bar_is_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导航栏是否显示"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>